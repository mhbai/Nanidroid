<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <Button
      android:id="@+id/btn1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="next s."
      android:onClick="onNextSurface"
      />

    <Button
      android:id="@+id/btn2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="animate"
      android:onClick="onAnimate"
      />

    <Button
      android:id="@+id/btn3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="c.box"
      android:onClick="onShowCollision"
      />

    <Button
      android:id="@+id/btn4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="run"
      android:onClick="runClick"
      />
    
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<com.cattailsw.nanidroid.Balloon
    android:id="@+id/bKero"
    android:layout_width="0dp"
      android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Hello World, Nanidroid"
    android:background="@drawable/balloon"
    />
<com.cattailsw.nanidroid.Balloon
    android:id="@+id/bSakura"
    android:layout_width="0dp"
      android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Hello World, Nanidroid"
    android:background="@drawable/balloon"
    />
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<!--<ImageView
    android:id="@+id/sakura_display"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:onClick="ivClick"
    />-->
  <com.cattailsw.nanidroid.KeroView
    android:id="@+id/kero_display"
    android:layout_width="0dp"
      android:layout_weight="1"
    android:layout_height="fill_parent"
    android:onClick="ivClick"
    />
  <com.cattailsw.nanidroid.SakuraView
    android:id="@+id/sakura_display"
    android:layout_width="0dp"
      android:layout_weight="1"
    android:layout_height="fill_parent"
    android:onClick="ivClick"
    />
  </LinearLayout>
</LinearLayout>

