<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <include layout="@layout/dbg_btns"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone" android:id="@+id/dbg_btn_bar"/>

  <include layout="@layout/main_btns"  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btn_bar" android:visibility="gone"/>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fl"
    android:onClick="frameClick"
    >
<com.cattailsw.nanidroid.Balloon
    android:id="@+id/bKero"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon"
      android:layout_gravity="top|left"
      android:textColor="#000000"
    />
<com.cattailsw.nanidroid.Balloon
    android:id="@+id/bSakura"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon"
      android:layout_gravity="top|right"
      android:textColor="#000000"      
    />


  <com.cattailsw.nanidroid.SakuraView
    android:id="@+id/sakura_display"
    android:layout_width="180dp"
    android:layout_height="240dp"
    android:layout_gravity="bottom|right"
    android:onClick="ivClick"
    />
  <com.cattailsw.nanidroid.KeroView
    android:id="@+id/kero_display"
    android:layout_width="126dp"
    android:layout_height="168dp"
    android:layout_gravity="bottom|left"
    android:onClick="ivClick"
    />
  </FrameLayout>

</LinearLayout>

